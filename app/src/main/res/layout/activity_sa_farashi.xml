<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:id="@+id/fback"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:text="Sunan kaya"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/addname"
            android:hint="saka sunan kaya a nan"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:inputType="text"
            android:background="@drawable/box"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_height="80dp"
            android:layout_width="90dp"
            android:text="Tsohon farashin saye"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            />


        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/addoldprice"
            android:background="@drawable/box"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            android:inputType="number"
            android:hint="saka tsohon farashi a nan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Tsohon farahin sayarwa"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/addnewprice"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box"
            android:inputType="number"
            android:hint="Tsohon farahin sayarwa"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Save"
        android:textSize="20sp"
        android:id="@+id/sabing"
        android:background="@drawable/button"/>

</LinearLayout>